              },
              "maxLength": {
                "value": 70,
                "message": "The name can be no longer than 70 characters"
              }
            }
          },
          {
            "name": "email",
            "type": "email",
            "label": "E-mail",
            "placeholder": "Enter your e-mail",
            "validationOptions": {
              "required": {
                "value": true,
                "message": "Please enter your email address"
              },
              "pattern": {
                "value": "^[a-zA-Z0-9]+([._-][a-zA-Z0-9]+)*@[a-zA-Z0-9]+([.-][a-zA-Z0-9]+)*\\.[a-zA-Z]{2,}(\\.[a-zA-Z]{2,})?$",
                "message": "Incorrect email format"
              },
              "maxLength": {
                "value": 100,
                "message": "The email can be no longer than 100 characters."
              }
            }
          }
        ],
        "textArea": {
          "name": "message",
          "type": "text",
          "label": "Message",
          "placeholder": "Enter your message",
          "validationOptions": {
            "required": {
              "value": true,
              "message": "Please write your message"
            },
            "minLength": {
              "value": 6,
              "message": "Message must be more than 7 symbols"
            },
            "maxLength": {
              "value": 1024,
              "message": "Maximum 1024 characters allowed."
            }
          }
        }
      }
    }
