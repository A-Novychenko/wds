          {
            "name": "name",
            "type": "text",
            "label": "Name",
            "placeholder": "Enter your name",
            "validationOptions": {
              "required": {
                "value": true,
                "message": "Please enter your name"
              },
              "pattern": {
                "value": "^[a-zA-Zа-яА-ЯёЁіІїЇєЄґҐ\\s-]+$",
